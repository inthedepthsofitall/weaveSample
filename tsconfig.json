{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Ensures absolute imports from "src" directory
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["src"]
}
